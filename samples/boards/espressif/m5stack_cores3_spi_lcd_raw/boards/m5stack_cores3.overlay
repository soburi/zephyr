&spi2 {
	status = "okay";
	half-duplex;
	sio;
	use-iomux;
	dummy-comp;
	clock-frequency = <40000000>;

        lcd_spi: display@0 {
                compatible = "zephyr,spi-device";
                reg = <0>;
                spi-max-frequency = <40000000>;
                spi-interframe-delay-ns = <0>;
                status = "okay";
        };
};

&sd0 {
	status = "disabled";
};
