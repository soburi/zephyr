 #include <zephyr/dt-bindings/i2c/i2c.h>

/ {
	test_gpio: gpio@deadbeef {
		compatible = "vnd,gpio";
		gpio-controller;
		reg = <0xdeadbeef 0x1000>;
		#gpio-cells = <0x2>;
		status = "okay";
	};

	test_i2c: i2c@11223344 {
		#address-cells = <1>;
		#size-cells = <0>;
		compatible = "vnd,i2c";
		reg = <0x11223344 0x10000>;
		status = "okay";
		clock-frequency = <100000>;

		test_tca9544a_mux0: tca9544a@0 {
			compatible = "ti,tca9544a";
			reg = <0x0>;
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;
			reset-gpios = <&test_gpio 0 0>;

			mux_i2c@0 {
				compatible = "ti,tca9544a-channel";
				reg = <0>;
				#address-cells = <1>;
				#size-cells = <0>;

				i2c_device@0 {
					compatible = "vnd,i2c-device";
					reg = <0x0>;
				};
			};

			mux_i2c@1 {
				compatible = "ti,tca9544a-channel";
				reg = <1>;
				#address-cells = <1>;
				#size-cells = <0>;

				i2c_device@1 {
					compatible = "vnd,i2c-device";
					reg = <0x1>;
				};
			};
		};

		test_tca9546a_mux0: tca9546a@1 {
			compatible = "ti,tca9546a";
			reg = <0x1>;
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;
			reset-gpios = <&test_gpio 0 0>;

			mux_i2c@0 {
				compatible = "ti,tca9546a-channel";
				reg = <0>;
				#address-cells = <1>;
				#size-cells = <0>;

				i2c_device@0 {
					compatible = "vnd,i2c-device";
					reg = <0x0>;
				};
			};

			mux_i2c@1 {
				compatible = "ti,tca9546a-channel";
				reg = <1>;
				#address-cells = <1>;
				#size-cells = <0>;

				i2c_device@1 {
					compatible = "vnd,i2c-device";
					reg = <0x1>;
				};
			};
		};

		test_tca9548a_mux0: tca9548a@2 {
			compatible = "ti,tca9548a";
			reg = <0x2>;
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;
			reset-gpios = <&test_gpio 0 0>;

			mux_i2c@0 {
				compatible = "ti,tca9548a-channel";
				reg = <0>;
				#address-cells = <1>;
				#size-cells = <0>;

				i2c_device@0 {
					compatible = "vnd,i2c-device";
					reg = <0x0>;
				};
			};

			mux_i2c@1 {
				compatible = "ti,tca9548a-channel";
				reg = <1>;
				#address-cells = <1>;
				#size-cells = <0>;

				i2c_device@1 {
					compatible = "vnd,i2c-device";
					reg = <0x1>;
				};
			};
		};
	};
};
