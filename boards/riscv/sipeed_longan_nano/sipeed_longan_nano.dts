/dts-v1/;
#include <gigadevice-gd32vf103Xb.dtsi>

/ {
	model = "Sipeed Longan Nano";
	compatible = "sipeed,longan_nano";

	chosen {
		zephyr,console = &usart0;
		zephyr,shell-uart = &usart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};
};

&usart0 {
	current-speed = <115200>;
	status = "okay";
};

&usart1 {
	current-speed = <115200>;
	status = "okay";
};

&usart2 {
	current-speed = <115200>;
	status = "okay";
};

&i2c0 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};

&i2c1 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};

&spi0 {
	status = "okay";
        cs-gpios = <&gpiob 2 0>;

        lcd0: lcd@0 {
                compatible = "sitronix,st7735s";
                reg = <0>;
                status = "okay";
                label = "LCD0";
		reset-gpios = <&gpiob 1 0>;
		cmd-data-gpios = <&gpiob 0 0>;
		width = <160>;
		height = <80>;
		x-offset = <1>;
		y-offset = <26>;
                spi-max-frequency = <4000000>;
        };
};

&spi1 {
	status = "okay";
        cs-gpios = <&gpiob 12 0>;

        sdhc0: sdhc@0 {
                compatible = "zephyr,mmc-spi-slot";
                reg = <0>;
                status = "okay";
                label = "SDHC0";
                spi-max-frequency = <1000000>;
        };

};

&usb {
	status = "okay";
};
