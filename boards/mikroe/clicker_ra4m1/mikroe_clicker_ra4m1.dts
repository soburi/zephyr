/dts-v1/;
#include <renesas/ra/r7fa4m1ab3cfm.dtsi>
#include <zephyr/dt-bindings/pinctrl/renesas/pinctrl-r7fa4m1xxxxxx.h>
#include <zephyr/dt-bindings/gpio/gpio.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "Mikroe Clicker RA4M1";
	compatible = "renesas,r7fa4m1ab3cfm";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,interrupt-controller = &icu;
	};

	leds {
		compatible = "gpio-leds";
		ld1: led_1 {
			gpios = <&ioport4 9 GPIO_ACTIVE_HIGH>;
			label = "User LED 1";
		};
		ld2: led_2 {
			gpios = <&ioport4 8 GPIO_ACTIVE_HIGH>;
			label = "User LED 2";
		};
	};

	buttons {
		compatible = "gpio-keys";
		btn1: button_1 {
			gpios = <&ioport3 4 GPIO_ACTIVE_LOW>;
			label = "User Button 1";
			zephyr,code = <INPUT_KEY_0>;
		};
	};

	aliases {
		led0 = &ld1;
		led1 = &ld2;
		sw0 = &btn1;
	};
};

&pinctrl {
	sci0_default: sci0_default {
		group1 {
			pinmux = <P410_RXD0>, <P411_TXD0>;
		};
	};
};

&sci0 {
	status = "okay";
	pinctrl-0 = <&sci0_default>;
	pinctrl-names = "default";
	uart0: uart {
		current-speed = <115200>;
		status = "okay";
	};
};

&ioport0 {
	/delete-property/ port-irq2-pins;  /* P002: Not connected */
	/delete-property/ port-irq3-pins;  /* P004: Not connected */
	/delete-property/ port-irq6-pins;  /* P000: Confilict with P301/T2 */
	/delete-property/ port-irq7-pins;  /* P001: Not connected */
	/delete-property/ port-irq10-pins; /* P005: Not available */
	/delete-property/ port-irq15-pins; /* P011: Connect to GND */
};

&ioport1 {
	/delete-property/ port-irq0-pins; /* P105: Not connected */
	/delete-property/ port-irq4-pins; /* P111: Not connected */
};

&ioport2 {
	/delete-property/ port-irq0-pins; /* P206: Conflict with P400, choose either. */
	/delete-property/ port-irq1-pins; /* P205: Conflict with P101, choose either. */
	/delete-property/ port-irq2-pins; /* P213: XTAL */
	/delete-property/ port-irq3-pins; /* P212: EXTAL */
};

&ioport3 {
	/delete-property/ port-irq8-pins; /* P305: Not available */
	status = "okay";
};

&ioport4 {
	/delete-property/ port-irq5-pins; /* P410: Conflict with P302/MBINT */
	/delete-property/ port-irq6-pins; /* P409: Connect to LED */
	/delete-property/ port-irq7-pins; /* P408: Connect to LED */
	/delete-property/ port-irq8-pins; /* P415: Not available */
	/delete-property/ port-irq9-pins; /* P414: Conflict with P304/T1 */
	status = "okay";
};

&ioport5 {
	/delete-property/ port-irq14-pins; /* P505: Not available */
};

&fcu {
	status = "okay";
};

&mosc {
	status = "okay";
	clock-frequency = <12000000>;
};

&cgc {
	clock-source = <&mosc>;
	iclk-div = <1>;
	pclka-div = <1>;
	pclkb-div = <2>;
	pclkc-div = <1>;
	pclkd-div = <1>;
	fclk-div = <2>;
};
