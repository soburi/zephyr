#include <mem.h>
#include <freq.h>
#include <arm/armv7-m.dtsi>
#include <zephyr/dt-bindings/gpio/gpio.h>
#include <zephyr/dt-bindings/i2c/i2c.h>
#include <zephyr/dt-bindings/pwm/pwm.h>
#include <zephyr/dt-bindings/display/panel.h>

/ {
	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			device_type = "cpu";
			compatible = "arm,cortex-m4";
			reg = <0>;
		};
	};

	sram0: memory0@20000000 {
		compatible = "mmio-sram";
		reg = <0x20000000 DT_SIZE_K(32)>;
	};

	flash0: flash0@0 {
		compatible = "soc-nv-flash";
		reg = <0x00000000 DT_SIZE_K(256)>;
	};

	flash1: flash1@40100000 {
		compatible = "soc-nv-flash";
		reg = <0x40100000 DT_SIZE_K(8)>;
	};

	soc {
		clock: clock@4001e000 {
			compatible = "renesas,ra-clock";
			reg = <0x4001e000 0x40 0x40047000 0x10>;
                        reg-names = "system", "mstp";
			#clock-cells = <0>;
		};

		ioport1: gpio@40080020 {
			compatible = "renesas,ra-gpio";
			reg = <0x40080020 0x20>;
			gpio-controller;
			#gpio-cells = <2>;
			interrupts = <6 0>;
			portno = <4>;
		};

		pinctrl: pinctrl@40040800 {
			compatible = "renesas,ra-pinctrl";
			reg = <0x40040800 0x500 0x40040d03 0x1>;
                        reg-names = "pfs", "pmisc_pwpr";
			status = "okay";
		};

		uart0: uart@40118000 {
			compatible = "renesas,ra-uart-sci";
			reg = <0x40118000 0x100>;
			clocks = <&clock>;
			channel = <0>;
		};

		uart1: uart@40118100 {
			compatible = "renesas,ra-uart-sci";
			reg = <0x40118100 0x100>;
			clocks = <&clock>;
			channel = <1>;
		};

		uart2: uart@40118200 {
			compatible = "renesas,ra-uart-sci";
			reg = <0x40118200 0x100>;
			clocks = <&clock>;
			channel = <2>;
		};

		uart3: uart@40118300 {
			compatible = "renesas,ra-uart-sci";
			reg = <0x40118300 0x100>;
			clocks = <&clock>;
			channel = <3>;
		};

		uart4: uart@40118400 {
			compatible = "renesas,ra-uart-sci";
			reg = <0x40118400 0x100>;
			clocks = <&clock>;
			channel = <4>;
		};

		uart5: uart@40118500 {
			compatible = "renesas,ra-uart-sci";
			reg = <0x40118500 0x100>;
			clocks = <&clock>;
			channel = <5>;
		};

		uart6: uart@40118600 {
			compatible = "renesas,ra-uart-sci";
			reg = <0x40118600 0x100>;
			clocks = <&clock>;
			channel = <6>;
		};

		uart7: uart@40118700 {
			compatible = "renesas,ra-uart-sci";
			reg = <0x40118700 0x100>;
			clocks = <&clock>;
			channel = <7>;
		};

		uart8: uart@40118800 {
			compatible = "renesas,ra-uart-sci";
			reg = <0x40118800 0x100>;
			clocks = <&clock>;
			channel = <8>;
		};

		uart9: uart@40118900 {
			compatible = "renesas,ra-uart-sci";
			reg = <0x40118900 0x100>;
			clocks = <&clock>;
			channel = <9>;
		};
	};
};

&nvic {
	arm,num-irq-priority-bits = <4>;
};
